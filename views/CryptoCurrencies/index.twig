{% extends 'layout.twig' %}
{% block content %}
    <section>
        <p>Coins</p>
        <ul>
            {% for cryptoCurrency in cryptoCurrencies %}
                <li>
                    <a href="/crypto/{{ cryptoCurrency.symbol }}">{{ cryptoCurrency.symbol }}</a> changed by {{ cryptoCurrency.percentChange24h|number_format(2) }}%
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
